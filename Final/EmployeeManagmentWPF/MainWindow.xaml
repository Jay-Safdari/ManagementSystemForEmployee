<Window x:Class="EmployeeManagmentWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmployeeManagmentWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="374">
    <Canvas>
        <Button x:Name="btn_submit" Content="Submit" Canvas.Left="120" Canvas.Top="250" Height="30" Width="120" Click="btn_submit_Click"/>
        <Label Content="Username" Canvas.Left="55" Canvas.Top="45" Height="30" Width="100" />
        <Label Content="Password" Canvas.Left="55" Canvas.Top="100" Height="30" Width="100" />
        <TextBox x:Name="txtBox_username" Canvas.Left="190" TextWrapping="Wrap" Canvas.Top="45" Width="120" Height="30" />
        <PasswordBox x:Name="pswBox_password" Canvas.Left="190" Canvas.Top="100" Width="120" />
        <TextBox x:Name="txtBox_showPassword" Canvas.Left="190" TextWrapping="Wrap" Canvas.Top="157" Width="120" Height="30"/>
        <Button x:Name="btn_ShowPass" Content="Show Password" Canvas.Left="55" Canvas.Top="157" Width="100" Height="30" Click="btn_ShowPass_Click" />


    </Canvas>
</Window>
